#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

echo "-----> Create the custom_settings.py"
ls -l $BUILD_DIR
echo "###################################"
ls -l $ENV_DIR

# if Existe Variable 'CUSTOM_SETTINGS' in app get the content and criete file 
if [ ! -s $ENV_DIR/CUSTOM_SETTINGS ]; then
  echo "** Not existe varible CUSTOM_SETTINGS" | indent
  exit 1
fi

# replace hello with goodbye in a new file
cat $ENV_DIR/CUSTOM_SETTINGS > $BUILD_DIR/custom_settings.py
